odd = 0
even = 0
num = 1

while num != 0:
    num = int(input("Shkruaj nje numer(0 per te ndaluar): "))

    if num % 2 == 0 and num != 0:
        even += 1
    elif num % 2 != 0:
        odd += 1
print("Numra cift:", even)
print("Numra tek:",odd)
